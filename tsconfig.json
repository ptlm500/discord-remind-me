{
  "compilerOptions": {
      "target": "es6",
      "module": "Node16",
      "outDir": "./dist/",
      "strict": true,
      "moduleResolution": "Node16",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "sourceMap": true,
      "baseUrl": "./"
  },
  "paths": {
        "*": ["types/*.d.ts"]
    },
  "files": [
      "src/index.ts"
  ],
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "test",
      "**/__mocks__/*",
      "./**/*.test.ts"
  ],
}